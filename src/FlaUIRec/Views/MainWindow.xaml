<Window x:Class="FlaUIRec.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlaUI Recorder" Height="350" Width="525" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label>Process ID:</Label>
            <TextBox Width="70" x:Name="ProcessIdText"></TextBox>
        </StackPanel>
        <Button Grid.Row="1" Content="Start" HorizontalAlignment="Left" Width="75" Click="Button_Click"/>
        <ListBox Grid.Row="2" x:Name="myList"/>
    </Grid>
</Window>
